#include "main.h"
#include <string.h>
/**
 * rev_string - reverses a string. 
 * @s - the string to reverse.
 */
void rev_string(char *s)
{
	int len = strlen(s);
	int i;

	while (*s != '\0')
	{
		_putchar(*s);
		s++;
	}
	_putchar('\n');

	for (i = len - 1 ; i >= 0 ; i--)
	{
 	_putchar(s[i]);
	}
	_putchar('\n');
	}
